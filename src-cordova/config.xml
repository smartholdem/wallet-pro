<?xml version='1.0' encoding='utf-8'?>
<widget id="com.smartholdem.walletpro" version="1.2.20" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>SmartHoldem Wallet Pro</name>
    <description>SmartHoldem Wallet Pro for Android</description>
    <author email="support@smartholdem.io" href="https://smartholdem.io">
        SmartHoldem Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreenDelay" value="100" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashScreen" value="screen" />
    <platform name="android">
        <preference name="AndroidLegacyExternalStorage" value="true" />
        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        </config-file>
        <allow-intent href="market:*" />
        <preference name="AndroidXEnabled" value="true" />
        <preference name="ScrollEnabled" value="false" />
        <preference name="Backup" value="false" />
        <preference name="Orientation" value="portrait" />
        <preference name="AndroidWindowSplashScreenBackground" value="#202d38" />
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="resources/android/icon/xxxhdpi.png" />
        <icon density="ldpi" src="resources/android/icon/ldpi.png" />
        <icon density="mdpi" src="resources/android/icon/mdpi.png" />
        <icon density="hdpi" src="resources/android/icon/hdpi.png" />
        <icon density="xhdpi" src="resources/android/icon/xhdpi.png" />
        <icon density="xxhdpi" src="resources/android/icon/xxhdpi.png" />
        <icon density="xxxhdpi" src="resources/android/icon/xxxhdpi.png" />
    </platform>
</widget>